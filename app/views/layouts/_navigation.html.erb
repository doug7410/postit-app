<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
</ul>

<!-- category button-->
<div class="nav_item">
    <div class="btn-group ">
      <%= link_to '#', class: 'btn dropdown-toggle btn-small', 'data-toggle' => 'dropdown' do %>  
        Categories <span class="caret"></span>
      <% end %>
      <ul class="dropdown-menu">
        <% Category.all.each do |cat| %>
        <li> <%= link_to cat.name , category_path(cat) %> </li>
        <% end %>
        
        <% if logged_in? && current_user.admin? %>
          <li class="divider"></li>
          <li>
            <%= link_to(new_category_path) do  %>
            <i class="icon-plus"></i> New Category
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
</div>

<!-- user actions-->
<% if logged_in? %>

<div class="nav_item">
  <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-small' %>
</div>

<div class="nav_item">
    <div class="btn-group ">
      <%= link_to '#', class: 'btn dropdown-toggle btn-small', 'data-toggle' => 'dropdown' do %>  
        <%= current_user.username %> <span class="caret"></span>
      <% end %>
      <ul class="dropdown-menu">
        <li>
          <%= link_to(edit_user_path(current_user)) do  %>
          <i class="icon-pencil"></i> edit profile
          <% end %>
        </li>
        <li>
          <%= link_to(user_path(current_user)) do  %>
          <i class="icon-user"></i> view profile
          <% end %>
        </li>
        <li>
          <%= link_to(logout_path) do  %>
          <i class="icon-circle-arrow-left"></i> logout
          <% end %>
        </li>
      </ul>
    </div>
</div>  
  
<% else %>

<!-- if not logged in-->
  <div class="nav_item">
    <%= link_to 'Log in', login_path, class: 'btn btn-small btn-success' %>
  </div>
  <div class="nav_item">
    <%= link_to 'Register', register_path, class: 'btn btn-small  ' %>    
  </div>
<% end %>


