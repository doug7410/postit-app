<div class="well">
  <%= form_for @user do |f| %>
    <div class="control-group">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="control-group">
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
    </div>
    <div class="control-group">
      <%= f.label :phone, "Phone Nmber <small>(numbers only)</small>".html_safe %>
      <%= f.text_field :phone, maxlength: 10 %>
      <%= link_to "#", id: 'two_factor_phone' do %>
        <i class="icon-question-sign" id="phone_tool_tip" data-toggle="popover" data-placement="right" title data-content="Please enter your phone number if you want to enable two factor authenication. This means that when you log in, a text message containing a 6 digit pin will be sent to you. You will need this number to continue to log in." data-original-title="Two Factor Authentication"></i>
      <% end %>
    </div>
    <% if !@user.new_record? %>
    <div class="control-group">
      <%= label_tag :old_password %>
      <%= password_field_tag :old_password %>
    </div>
    <% end %>
    <div class="control-group">
      <%= label_tag !@user.new_record? ? :new_password : :password %> 
       <%= f.password_field :password %>
    </div>
    <%= f.submit @user.new_record? ? 'Register' : 'Update Profile' , class: 'btn btn-confirm' %>
  <% end %>
</div>